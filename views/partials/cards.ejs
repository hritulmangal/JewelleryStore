<div class="card" style="width: 18rem; margin: auto; border: 4px solid;  border-color: rgb(210, 179, 3);">
    <img src="<%=image%>" class="card-img-top" alt="...">
    <div class="card-body">
        <h5 class="card-title">
            <%=title%>
        </h5>
        <p class="card-text">
            <%=weight%>
        </p>
        <p class="card-text">
            <%=cost%>
        </p>
        <p class="card-text">
            <%=description%>
        </p>
        <a href="<%=link%>" class="btn btn-primary">Add to Cart</a>
    </div>
</div>